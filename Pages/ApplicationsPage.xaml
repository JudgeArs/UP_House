<Page x:Class="House.Pages.ApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:House.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApplicationsPage">

    <Grid Background="{StaticResource Prim_BackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource Sec_BackBrush}">
            <StackPanel Orientation="Vertical"
                        Margin="20,0,0,0"
                        VerticalAlignment="Bottom">
                <TextBlock Text="Заявки" Style="{StaticResource HeaderText}"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="AddAplications"
                            Content="Добавить заявку"
                            Style="{StaticResource PrimaryButton}"
                            Click="AddAplications_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" 
                Background="{StaticResource Sec_BackBrush}" 
                Margin="20,10,20,10"
                Padding="15"
                CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Фильтр по адресу:"
                           Style="{StaticResource NormalText}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <ComboBox x:Name="AddressFilterComboBox"
                          Grid.Column="1"
                          VerticalAlignment="Center"
                          Height="30">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Address}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button x:Name="ClearFilterButton"
                        Grid.Column="2"
                        Content="Сбросить фильтр"
                        Style="{StaticResource SecondaryButton}"
                        Click="ClearFilterButton_Click"
                        Margin="10,0,0,0"/>

                <Button x:Name="RefreshButton"
                        Grid.Column="3"
                        Content="Обновить"
                        Style="{StaticResource SecondaryButton}"
                        Click="RefreshButton_Click"
                        HorizontalAlignment="Right"
                        Width="100"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20">
            <ListBox x:Name="ApplicationsListBox"
                     Background="{StaticResource Prim_BackBrush}"
                     BorderThickness="1"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionMode="Single">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,5,0,5"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource Sec_BackBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,10"
                                Padding="15"
                                BorderBrush="Black"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="ID: "
                                           Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Id}"
                                           Style="{StaticResource NormalText}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Адрес: "
                                           Margin="0,5,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding List_of_housing_stock.Address, FallbackValue='Не указан'}"
                                           Style="{StaticResource NormalText}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0"
                                           Text="Владелец: "
                                           Margin="0,5,5,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding Owner, FallbackValue='Не указан'}"
                                           Style="{StaticResource NormalText}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0"
                                           Text="Описание: "
                                           Margin="0,5,5,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           Text="{Binding Descrition, FallbackValue='Нет описания'}"
                                           Style="{StaticResource NormalText}"
                                           TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="4" Grid.Column="0"
           Text="Дата: "
           Margin="0,5,5,0"/>
                                <TextBlock Grid.Row="4" Grid.Column="1"
           Text="{Binding Date, StringFormat='dd.MM.yyyy HH:mm', FallbackValue='Не указана'}"
           Style="{StaticResource NormalText}"/>

                                <TextBlock Grid.Row="5" Grid.Column="0"
           Text="Статус: "
           Style="{StaticResource NormalText}"
           Margin="0,5,5,0"/>
                                <TextBlock Grid.Row="5" Grid.Column="1"
           Text="{Binding Status1.Status1, FallbackValue='Неизвестно'}"
           Style="{StaticResource NormalText}"/>

                                <StackPanel Grid.Row="0" Grid.RowSpan="6" Grid.Column="2"
            Orientation="Vertical"
            VerticalAlignment="Center"
            Margin="20,0,0,0">
                                    <Button Content="Просмотр"
                                            Style="{StaticResource SecondaryButton}"
                                            Tag="{Binding Id}"
                                            Click="ViewButton_Click"
                                            Margin="0,0,0,5"/>
                                    <Button Content="Редактировать"
                                            Style="{StaticResource SecondaryButton}"
                                            Tag="{Binding Id}"
                                            Click="EditButton_Click"
                                            Margin="0,0,0,5"/>
                                    <Button Content="Удалить"
                                            Style="{StaticResource SecondaryButton}"
                                            Tag="{Binding Id}"
                                            Click="DeleteButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Page>
