<Page x:Class="House.Pages.EmploeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:House.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmploeePage">

    <Grid Background="{StaticResource Prim_BackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Сотрудники и их заявки" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="10"/>
            <Button x:Name="RefreshButton" 
                    Content="Обновить" 
                    Click="RefreshButton_Click" 
                    Margin="5" 
                    Width="100"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock x:Name="lblSelectEmployee" 
                           Text="Выберите сотрудника:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <GroupBox Header="Сотрудники" FontWeight="Bold">
                    <ListView x:Name="lvEmployees" SelectionChanged="lvEmployees_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="40" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Имя" Width="150" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Логин" Width="100" DisplayMemberBinding="{Binding Login}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </StackPanel>

            <GroupBox Grid.Column="1" Header="Заявки сотрудника" Margin="10" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Выбранный сотрудник: " FontWeight="Bold"/>
                        <TextBlock x:Name="tbSelectedEmployee" Text="Не выбран" FontWeight="Bold" Foreground="DarkRed"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="dgApplications" 
         AutoGenerateColumns="False"
         IsReadOnly="True"
         Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding List_of_housing_stock.Address, FallbackValue='Нет'}" Width="150"/>
                            <DataGridTextColumn Header="Владелец" Binding="{Binding Owner, FallbackValue='Нет'}" Width="120"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Descrition, FallbackValue='Нет'}" Width="*"/>
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}, FallbackValue='Нет'}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status1.Status1, FallbackValue='Нет'}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Всего заявок: " FontWeight="Bold"/>
                        <TextBlock x:Name="tbTotalApplications" Text="0" FontWeight="Bold" Foreground="DarkGreen" Margin="5,0,20,0"/>

                        <TextBlock Text="Услуг выполнено: " FontWeight="Bold"/>
                        <TextBlock x:Name="tbServicesCount" Text="0" FontWeight="Bold" Foreground="DarkBlue"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Page>
