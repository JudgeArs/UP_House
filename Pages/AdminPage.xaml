<Page x:Class="House.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:House.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="{StaticResource Prim_BackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource Sec_BackBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="Страница администратора" Style="{StaticResource HeaderText}" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </Grid>
        </Border>
        <Border Grid.Row="1" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="ApplicationsButton" Content="Заявки" Style="{StaticResource NavButton}" Click="ApplicationsButton_Click"/>
                <Separator Width="1" Margin="20,5"/>
                <Button x:Name="ReadyApplicButton" Content="Выполненные заявки" Style="{StaticResource NavButton}" Click="ReadyApplicButton_Click" ToolTip="Список выполененных заявок"/>
                <Separator Width="1" Margin="20,5"/>
                <Button x:Name="HousingStockButton" Content="Жилищный фонд" Style="{StaticResource NavButton}" Click="HousingStockButton_Click"/>
                <Separator Width="1" Margin="20,5"/>
                <Button x:Name="EmployeeStockButton" Content="Список сотруднников" Style="{StaticResource NavButton}" Click="EmployeeStockButton_Click"/>
            </StackPanel>
        </Border>
        <Frame x:Name="MainFrame"
           Grid.Row="2"
           NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>