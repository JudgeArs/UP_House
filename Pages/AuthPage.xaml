<Page x:Class="House.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:House.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="{StaticResource Prim_BackBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource Sec_BackBrush}"
            CornerRadius="0"
            BorderBrush="Black"
            BorderThickness="1"
            Width="400"
            Height="280"
            VerticalAlignment="Top"
            HorizontalAlignment="Center" Margin="0,5,0,0" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                       Text="Вход в систему"
                       Style="{StaticResource HeaderText}"/>
                <TextBlock Grid.Row="1"
                       Text="Логин: "
                       Style="{StaticResource NormalText}"/>
                <TextBox Grid.Row="2"
                     x:Name="LoginTextBox"
                     Style="{StaticResource TextBoxStyle}" Margin="0,24,0,4" Grid.RowSpan="6"/>
                <TextBlock Grid.Row="9"
                    Text="Пароль:"
                    Style="{StaticResource NormalText}" Margin="0,6,10,-2" Grid.RowSpan="2"/>
                <PasswordBox Grid.Row="10" x:Name="PasswordBox" Style="{StaticResource PasswordBox}" Margin="0,10,0,-49"/>

                <TextBlock Grid.Row="6" x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Visibility="Collapsed"/>

                <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,61,0,-115">
                    <Button x:Name="LoginButton" Content="Войти" Style="{StaticResource PrimaryButton}"  Click="LoginButton_Click" Width="103"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
