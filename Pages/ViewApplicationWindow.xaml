<Window x:Class="House.Pages.ViewApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:House.Pages"
        mc:Ignorable="d"
        Title="ViewApplicationWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
            <Setter Property="Foreground" Value="#1976D2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource Sec_BackBrush}" 
                CornerRadius="5" 
                Padding="15">
            <StackPanel>
                <TextBlock Text="Просмотр заявки" 
                           Style="{StaticResource HeaderText}"/>
                <TextBlock x:Name="ApplicationIdText" 
                           Style="{StaticResource NormalText}" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Основная информация -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                    <!-- Контактная информация -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                    <!-- Исполнитель -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                    <!-- Дополнительная информация -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Раздел: Основная информация -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                           Text="Основная информация" 
                           Style="{StaticResource SectionHeader}"/>

                <!-- ID заявки -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="ID заявки:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="IdText" 
                           Grid.Row="1" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- Адрес -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Адрес:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="AddressText" 
                           Grid.Row="2" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- ФИО заявителя -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="ФИО заявителя:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="OwnerText" 
                           Grid.Row="3" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- Описание -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Описание проблемы:" 
                           Style="{StaticResource LabelText}"/>
                <Border Grid.Row="4" Grid.Column="1" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="3" 
                        Padding="10" 
                        Background="#F9F9F9">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                        <TextBlock x:Name="DescriptionText" 
                                   Style="{StaticResource ValueText}" 
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>

                <!-- Статус -->
                <TextBlock Grid.Row="5" Grid.Column="0" 
                           Text="Статус:" 
                           Style="{StaticResource LabelText}"/>
                <Border Grid.Row="5" Grid.Column="1" 
                        CornerRadius="3" 
                        Padding="5" 
                        Background="{StaticResource Sec_BackBrush}">
                    <TextBlock x:Name="StatusText" 
                               Style="{StaticResource ValueText}" 
                               FontWeight="Bold"/>
                </Border>

                <!-- Дата создания -->
                <TextBlock Grid.Row="6" Grid.Column="0" 
                           Text="Дата создания:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="CreatedDateText" 
                           Grid.Row="6" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- Раздел: Контактная информация -->
                <TextBlock Grid.Row="7" Grid.ColumnSpan="2" 
                           Text="Контактная информация" 
                           Style="{StaticResource SectionHeader}"/>

                <!-- Телефон -->
                <TextBlock Grid.Row="8" Grid.Column="0" 
                           Text="Контактный телефон:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="PhoneText" 
                           Grid.Row="8" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- Раздел: Исполнитель -->
                <TextBlock Grid.Row="9" Grid.ColumnSpan="2" 
                           Text="Исполнитель" 
                           Style="{StaticResource SectionHeader}"/>

                <!-- Ответственный -->
                <TextBlock Grid.Row="10" Grid.Column="0" 
                           Text="Ответственный:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="EmployerText" 
                           Grid.Row="10" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- Раздел: Дополнительная информация -->
                <TextBlock Grid.Row="11" Grid.ColumnSpan="2" 
                           Text="Дополнительная информация" 
                           Style="{StaticResource SectionHeader}"/>

                <!-- Дата выполнения -->
                <TextBlock Grid.Row="12" Grid.Column="0" 
                           Text="Дата выполнения:" 
                           Style="{StaticResource LabelText}"/>
                <TextBlock x:Name="CompletionDateText" 
                           Grid.Row="12" Grid.Column="1" 
                           Style="{StaticResource ValueText}"/>

                <!-- Комментарий -->
                <TextBlock Grid.Row="13" Grid.Column="0" 
                           Text="Комментарий:" 
                           Style="{StaticResource LabelText}"/>
                <Border Grid.Row="13" Grid.Column="1" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="3" 
                        Padding="10" 
                        Background="#F9F9F9">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                        <TextBlock x:Name="CommentText" 
                                   Style="{StaticResource ValueText}" 
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="{StaticResource Sec_BackBrush}" 
                Padding="15" 
                Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" 
                        Content="Закрыть" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="100" 
                        Click="CloseButton_Click"/>
                <Button x:Name="EditButton" 
                        Content="Редактировать" 
                        Style="{StaticResource PrimaryButton}" 
                        Width="100" 
                        Margin="10,0,0,0" 
                        Click="EditButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
