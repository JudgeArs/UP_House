<Window x:Class="House.Pages.AddApplicationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:House.Pages"
        mc:Ignorable="d"
        Title="AddApplicationsWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Добавление новой заявки"
                   Style="{StaticResource HeaderText}"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Адрес *"
                           Style="{StaticResource NormalText}"/>
                <ComboBox x:Name="AddressComboBox"
                          Grid.Row="2"
                          DisplayMemberPath="Address"
                          IsEditable="False"/>

                <TextBlock Grid.Row="4"
                           Text="ФИО заявителя *"
                           Style="{StaticResource NormalText}"/>
                <TextBox x:Name="OwnerTextBox"
                         Grid.Row="6"
                         Style="{StaticResource TextBoxStyle}"
                         MaxLength="100"/>

                <TextBlock Grid.Row="8"
                           Text="Контактный телефон *"
                           Style="{StaticResource NormalText}"/>
                <TextBox x:Name="PhoneTextBox"
                         Grid.Row="10"
                         Style="{StaticResource TextBoxStyle}"
                         PreviewTextInput="PhoneTextBox_PreviewTextInput"
                         LostFocus="PhoneTextBox_LostFocus"
                         MaxLength="20"/>

                <TextBlock Grid.Row="12"
                           Text="Описание проблемы *"
                           Style="{StaticResource NormalText}"/>
                <TextBox x:Name="DescriptionTextBox"
                         Grid.Row="14"
                         Style="{StaticResource TextBoxStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="100"
                         MaxLength="500"/>

                <TextBlock Grid.Row="16"
                           Text="Дата заявки *"
                           Style="{StaticResource NormalText}"/>
                <DatePicker x:Name="DatePicker"
                            Grid.Row="18"
                            SelectedDateFormat="Short"
                            IsTodayHighlighted="True"
                            ToolTip="Выберите дату создания заявки"/>

                <TextBlock Grid.Row="20"
                           Text="Ответственный исполнитель"
                           Style="{StaticResource NormalText}"/>
                <ComboBox x:Name="EmployerComboBox"
                          Grid.Row="22"
                          DisplayMemberPath="Name"
                          IsEditable="False"
                          ToolTip="Для собственников выбирается администратором"/>
                <TextBlock Grid.Row="24"
                           Text="Статус заявки"
                           Style="{StaticResource NormalText}"/>
                <ComboBox x:Name="StatusComboBox"
                          Grid.Row="26"
                          DisplayMemberPath="Status1"
                          IsEditable="False"
                          ToolTip="Для собственников статус устанавливается автоматически"/>

                <TextBlock x:Name="ErrorTextBlock"
                           Grid.Row="28"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           Margin="0,10,0,0"/>
            </Grid>
        </ScrollViewer>

        <Border Grid.Row="2"
                Background="{StaticResource Sec_BackBrush}"
                Padding="10"
                Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="CancelButton"
                        Content="Отмена"
                        Style="{StaticResource SecondaryButton}"
                        Click="CancelButton_Click"
                        Width="100"
                        Margin="0,0,10,0"/>
                <Button x:Name="SaveButton"
                        Content="Сохранить"
                        Style="{StaticResource PrimaryButton}"
                        Click="SaveButton_Click"
                        Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>